<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@android:color/white"
    >

<TextView android:layout_height="wrap_content" android:id="@+id/title" android:layout_width="fill_parent" android:text="@string/title" android:textSize="50px" android:gravity="center" android:textColor="@android:color/black"/>
<EditText android:text="@string/http" android:id="@+id/urlEdit" android:layout_width="fill_parent" android:layout_height="wrap_content" />
<Button android:layout_height="wrap_content" android:text="@string/go_short" android:layout_width="wrap_content" android:id="@+id/goShort" />
<EditText android:text="@string/http" android:id="@+id/parsedUrlEdit" android:layout_width="fill_parent" android:layout_height="wrap_content" />

</LinearLayout>
